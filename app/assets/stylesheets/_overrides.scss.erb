html, body {
    height: 100%;
    margin: 0;
    font-family: 'PT Sans', 'Work Sans', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

// NAVIGATION STYLING

.navbar {
  display: none;
  min-height: 80px;
  background-color:#666;
  background-color: rgba(0,0,0,0.6) !important;
}

.nav-pills .nav-link.active, .nav-pills .nav-link.active:focus, .nav-pills .nav-link.active:hover, .nav-pills .nav-item.open .nav-link, .nav-pills .nav-item.open .nav-link:focus, .nav-pills .nav-item.open .nav-link:hover {
  background-color: #020202;
}

.navbar {
  padding: 0;
}

.navbar-brand {
  padding-top: 0;
  padding-bottom: 0;
  height: 80px;
  line-height: 80px;
  font-size: 1.5em;
}

.navbar-nav .nav-link {
  padding-top: 0;
  padding-bottom: 0;
  height: 80px;
  line-height: 80px;
  font-size: 1.1em;
}

// SECTION STYLING

section {
    height: 100%;
    width: 100%;
    position: relative;
    z-index: 20;

}

#top {
    padding-top: 54px;
    overflow: hidden;
    background: linear-gradient(to bottom, #6cb2d4 0%,#1e528e 100%);
}

#portfolio1 {
    padding-top: 50px;
    padding-bottom: 50px;
    background: #17301C;
    height:auto;
}

#portfolio2 {
  padding-top: 50px;
  padding-bottom: 50px;
    background: #0B7A75;
    height:auto;
}

#portfolio3 {
  padding-top: 50px;
  padding-bottom: 50px;
    background: #8AA399;
    height:auto;
}

#portfolio4 {
  padding-top: 50px;
  padding-bottom: 50px;
    background: #070707;
    height:auto;
}

.btn-site {
  font-family: 'Roboto', sans-serif;
  font-weight: 300 !important;
  font-size: 1.5em;
}

svg {
  position: absolute;
  overflow: visible !important;
  bottom: 0;
  left: 0;
}

#sun, #hill-1, #hill-2, #hill-3, #cloud-1, #cloud-2 {
  opacity: 0;
}




.resume {
  margin-top: 40px;
}

@media (max-width: 992px) {
    #top {
        padding-top:130px
    }
    #head-slider {
      padding-left: 50%;
      p {
        font-size: 2em;
      }
    }
}

#title {
    padding: .5em 0 0;
    position: relative;
}

#head-slider {
  position: absolute;
  z-index: 1000;
}



.animation {
    margin-top:20px;
    width:100%;
    height:100%;
    border-radius:20px;
    -webkit-font-smoothing: antialiased;
    position:absolute;
    overflow: hidden;
    svg {
      position: relative;
      bottom: 0;
    }
  }

.lines {
  position: relative;
}

// About Section
#about {
  background-color: #fff;
  height:auto;
}
#about .row {
  padding: 0 0 3em;
}

#about h3 {
    font-size: 2.5em;
    color: #484848;
    padding: 0 0 1em;
    margin: 0;
  }

  #about p {
    font-family: 'Roboto', sans-serif;
    font-weight: 300 !important;
    font-size: 1.8em;
  }

  #about #padrow {
    padding: 5em 0 5em 0;
  }

  .btn-site {
    font-family: 'Roboto', sans-serif;
    font-weight: 300 !important;
    font-size: 2em;
  }

  .card-block h4 {
    font-family: 'Roboto', sans-serif;
    font-size: 2.5em;
  }

  .card-block p {
    font-family: 'Roboto', sans-serif;
    font-weight: 300 !important;
    font-size: 2em;
  }

@media (min-width: 992px) {
  #about h3 {
    font-family: 'Roboto', sans-serif;
    font-weight: 500 !important;
    font-size: 2.0em;
    color: #484848;
    padding: 0 0 1em;
    margin: 0;
  }

  #about p {
    font-family: 'Roboto', sans-serif;
    color: #333333;
    font-weight: 300 !important;
    font-style: normal;
    font-size: 1.25em;

  }


  #hill-2 {
    filter: url(#dropShadow);
  }
  #hill-3{
    filter: url(#dropShadow);
  }
  #cloud-1 {
    filter: url(#dropShadow);
  }
  #cloud-2 {
    filter: url(#dropShadow);
  }
  #sun {

  }

  .btn-site {
    font-family: 'Roboto', sans-serif;
    font-weight: 300 !important;
    font-size: 1.25em;
  }

}

//About Animation

.card {
  overflow: hidden;
  position: relative;
  display: block;
  margin-bottom: 0px;
  background-color: #fff;
  border: none;
}

.cardWrapper {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  width: 300px;
  height: 300px;
  overflow: hidden;
}

.cardFace {
  border-radius: 50%;
  width: 100%;
  position: absolute;
  overflow: hidden;
}

.card-block .btn {
  width: 48%;
}

//Portfolio Animation

.cardCont {
  width:100%;
  height:400px;
  position:relative;
}

@media (min-width: 1200px) {
  .cardCont {
    width:100%;
    height:250px;
    position:relative;
  }
}

.cardFront, .cardBack
{
  position:absolute;
  width:100%;
  height:100%;
  background:url('http://s.cdpn.io/33073/lorempixel.jpg');
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
}
.cardBack
{
  background:url('http://s.cdpn.io/33073/lorempixe1l.jpg');
}

.playcardFront
{
  background:url("http://unlimitedpotentialnow.com/wp-content/uploads/2012/01/Bouquet-cs.jpg");
}
.playcardBack
{  background:url("http://i203.photobucket.com/albums/aa158/Comic1111/ACe.png");
}

.shadow {
    -webkit-filter: drop-shadow( -5px -5px 5px #000 );
            filter: drop-shadow( -5px -5px 5px #000 ); /* Same syntax as box-shadow */
}

.card-block {
  display: none;
}

.breaker .line {
    background-image: image-url('line-bg.png');
    height: 6px;
    width: 100%;
}
